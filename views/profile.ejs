<!doctype html>
<html>
<head>
    <title>Blogger Profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> Profile Page</h1>
        <a href="/post" class="btn btn-default btn-sm">Create New Post</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="well">
            <h3><span class="fa fa-laptop"></span> Local</h3>

                <p>
                    <strong>username</strong>: <%= user.username %><br>
                    <strong>email</strong>: <%= user.email %><br>
                    <strong>Blog Title</strong>: <%= user.blogTitle %><br>
                    <strong>Blog Description</strong>: <%= user.blogDescription %><br>
                </p>
                
        </div>

    </div>

    <div class="container">
      <h2>Posts for <%= user.username %></h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Post Title</th>
            <th>Post Content</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Last Updated At</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i=0; i<posts.length; i++) {
            var post = posts[i];
            var image = postImages[i];
          %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.content %></td>
                <td><img src="<%= image %>" style="height: 150px; width: 150px"/></td>
                <td><%= post.createdAt %></td>
                <td><%= post.lastUpdated %></td>
                <td><a href="/post/<%= post._id %>"><i class="fa fa-pencil-square-o"></i>Edit</a></td>
                <td><a href="/post_delete/<%= post._id %>"><i class="fa fa-trash-o fa-fw"></i>Delete</a></td>
              </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div
</body>
</html>
